<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">


    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="84dp"
            android:layout_marginBottom="25dp"
            android:fontFamily="monospace"
            android:text="@string/register"
            android:textColor="#E61212"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toTopOf="@+id/editTextTextEmailAddress"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="140dp" />


        <EditText
            android:id="@+id/editTelNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/editTelNumber"
            android:inputType="number"
            android:rotation="0"
            android:rotationX="0"
            android:rotationY="0"
            app:layout_constraintBottom_toTopOf="@+id/editTextTextPasswordRepeat"
            tools:layout_editor_absoluteX="94dp" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/editLogin"
            android:inputType="textEmailAddress"
            app:layout_constraintBottom_toTopOf="@+id/editTextTextPassword"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:layout_editor_absoluteX="94dp" />

        <EditText
            android:id="@+id/editTextTextPasswordRepeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/editPassword"
            android:inputType="textPassword"
            app:layout_constraintBottom_toTopOf="@+id/buttonGoToRegister"
            tools:layout_editor_absoluteX="94dp" />

        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="56dp"
            android:text="@string/registerButton"
            app:layout_constraintBottom_toTopOf="@+id/buttonLogin"
            tools:layout_editor_absoluteX="147dp" />

        <Button
            android:id="@+id/buttonbackToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:text="@string/loginBackToButton"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="509dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>